<!-- activity_result.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/result_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/resultado_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#ffd966"
        android:padding="4dp"
        android:text="Teste \n Positivo"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.181" />

    <TextView
        android:id="@+id/resultado_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textSize="26sp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="@+id/resultado_label"
        app:layout_constraintStart_toStartOf="@+id/resultado_label"
        app:layout_constraintTop_toBottomOf="@+id/resultado_label"/>

    <Button
        android:id="@+id/voltar_button"
        android:layout_width="227dp"
        android:layout_height="53dp"
        android:layout_marginBottom="20dp"
        android:text="Tela Inicial"
        android:textSize="20sp"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/enviar_resultado_button"
        android:layout_width="203dp"
        android:layout_height="73dp"
        android:text="Enviar resultado"
        android:layout_marginBottom="10dp"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/voltar_button"
        app:layout_constraintEnd_toEndOf="@+id/voltar_button"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="@+id/voltar_button" />

    <ImageView
        android:id="@+id/semaforo_image"
        android:layout_width="137dp"
        android:layout_height="164dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/resultado_descricao"
        app:layout_constraintStart_toStartOf="@+id/resultado_descricao"
        app:layout_constraintTop_toBottomOf="@+id/resultado_descricao"
        app:srcCompat="@drawable/sinal_vermelho" />


</androidx.constraintlayout.widget.ConstraintLayout>
